{
  "name": "vigilplus",
  "version": "1.0.1",
  "description": "Advanced Linux server monitoring tool with real-time metrics, alerts, and Flutter app integration",
  "main": "dist/index.js",
  "bin": {
    "vigilplus": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/cli.ts",
    "start": "node dist/cli.js",
    "watch": "tsc --watch",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist/ *.tgz",
    "package": "npm run clean && npm run build && npm pack",
    "postinstall": "node deploy/post-install.js"
  },
  "keywords": [
    "monitoring",
    "server",
    "linux",
    "system",
    "metrics",
    "performance",
    "realtime",
    "api",
    "flutter",
    "dashboard"
  ],
  "author": "Plus Equals To",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/plusequalstoltd/vigilplus.git"
  },
  "bugs": {
    "url": "https://github.com/plusequalstoltd/vigilplus/issues"
  },
  "homepage": "https://github.com/plusequalstoltd/vigilplus#readme",
  "files": [
    "dist/",
    "README.md",
    "LICENSE",
    "deploy/"
  ],
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "systeminformation": "^5.21.15"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.17",
    "@types/node": "^20.8.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "os": [
    "linux",
    "darwin",
    "win32"
  ]
}
